<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.xk_ys_VOOLOC.GestureSetting">
    <RelativeLayout
        style="@style/RelativeLayout_style"
        android:background="@color/bannercolor">

        <TextView
            android:id="@+id/back"
            style="@style/correct_back"
            android:background="@drawable/back"/>

        <TextView
            style="@style/banerText"
            android:text="@string/Gestures_pw" />

        <TextView
            style="@style/forward"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/correct_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:background="@drawable/modify"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="6dp" />
        <TextView
            android:text="@string/Gestures_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#333333"
            android:textSize="16dp" />
        <Switch
            android:layout_width="100dp"
            android:id="@+id/gesture"
            android:layout_marginRight="6dp"
            android:checked="false"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        style="@style/branch_background" />

    <LinearLayout
        android:id="@+id/set_gesture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        >
        <ImageView
            android:background="@drawable/icon_gesture"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="6dp" />
        <TextView
            android:text="@string/set_gesture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#333333"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#888888"
            android:textSize="14sp" />
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/ic_gray_arrow"
            />
    </LinearLayout>
</LinearLayout>
