<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.xk_ys_VOOLOC.input_password">

    <RelativeLayout
        style="@style/RelativeLayout_style"
        android:background="@color/bannercolor">

        <TextView
            android:id="@+id/correct_back"
            style="@style/correct_back"
            android:background="@drawable/back"/>

        <TextView
            style="@style/forward"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="80dp"
        android:text="设置密码"
        style="@style/sizeline"
        android:textSize="24dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="CN"
            android:textColor="@color/Tip1"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/textview1"
            android:background="@drawable/back1" />

        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/textview2"
            android:gravity="center"
            android:text="+86"
            android:textColor="@color/Tip1"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:padding="8dp"
            android:id="@+id/textview4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/textview3"
            android:layout_marginRight="16dp"
            android:textSize="@dimen/text_normal"
            android:inputType="number"/>

        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/textview2"
            android:layout_below="@+id/textview1"

            android:gravity="center"
            android:text="密码"
            android:textColor="@color/Tip1"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:padding="8dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textview4"
            android:layout_alignLeft="@+id/textview4"
            android:layout_marginRight="16dp"
            android:inputType="textPassword"
            android:textSize="@dimen/text_normal"

            />
    </RelativeLayout>

    <TextView
        android:padding="8dp"
        android:text="忘记密码"
        android:layout_gravity="end"
        android:paddingRight="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Tip"/>
    <Button
        android:layout_marginTop="20dp"
        android:text="@string/login"
        style="@style/button_one" />
</LinearLayout>
